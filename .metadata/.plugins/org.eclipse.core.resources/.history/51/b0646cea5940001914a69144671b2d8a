import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.Scanner;

public class StringTooLong {

	public String makeShorter(String input) {
		if(input.length() >= 20) {
			throw new StringTooLongException("The input string is over 20 characters long.");
		}return input;
	}
	
	public static void main(String[] args) {
		File inputFile = new File("sunshine.txt");
		System.out.println(inputFile.canWrite());
		
		Scanner fileScanner = null;
		try {
			fileScanner = new Scanner(inputFile);
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		
		String cutString = "";
		while(fileScanner.hasNext()) {
			String original = "\n" + fileScanner.nextLine();
			try {
				makeShorter(original);
			} catch (StringTooLongException e) {
				
			}
		}
		fileScanner.close();

		PrintWriter writer = null;
		try {
			writer = new PrintWriter("newSunshine.txt");
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} finally {
			writer.close();
		}

		writer.write(reverse);
	}

}
